<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/tools"
    android:background="@drawable/qbackground"
    android:orientation="vertical">
    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:menu_fab_size="normal"
        android:layout_gravity="left"
        android:layout_marginTop="90dp"
        fab:menu_colorNormal="#DA4336"
        fab:menu_colorPressed="#DA4336"
        fab:menu_colorRipple="#DA4336"
        fab:menu_icon="@drawable/fab_add"
        fab:menu_buttonSpacing="0dp"
        fab:menu_labels_margin="0dp"
        fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
        fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
        fab:menu_labels_textColor="#FFFFFF"
        fab:menu_labels_textSize="14sp"
        fab:menu_labels_colorNormal="@color/q_blue"
        fab:menu_labels_colorPressed="@color/q_blue"
        fab:menu_labels_colorRipple="@color/q_blue"
        fab:menu_labels_singleLine="false"
        fab:menu_labels_ellipsize="none"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_position="right"
        fab:menu_openDirection="down"
        fab:menu_backgroundColor="@android:color/transparent"
        fab:menu_fab_label="your_label_here"
        >

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:src="@drawable/arrow"
            android:foregroundTint="@android:color/white"
            app:fab_colorNormal="#DA4336"
            app:fab_colorPressed="#DA4336"
            app:fab_size="normal"
            app:fab_label="Carding"
            />

    </com.github.clans.fab.FloatingActionMenu>

</LinearLayout>